-
  const POINTS = [
    { n: 50, y: 50, r: 3 },
    { n: 170, y: 70, r: 3 },
    { n: 240, y: 80, r: 3 },
    { n: 270, y: 45, r: 3 },
  ]

main#app
  button#btn1.radar(type='button', aria-label='radar', aria-pressed='false')
    div.radar__outer
      div.radar__stroke_light
      div.radar__highlight
    div.radar__inner 
      div.radar__light
      div.radar__screen
        svg.radar__svg(version='1.1', width='192', height='192', viewBox='0 0 192 192')
          line(x1='0', y1='96', x2='192', y2='96', class='radar__line')
          line(x1='96', y1='0', x2='96', y2='192', class='radar__line')
          circle(cx='96', cy='96', r='80', class='radar__ring')
          circle(cx='96', cy='96', r='60', class='radar__ring')
          circle(cx='96', cy='96', r='40', class='radar__ring')
          circle(cx='96', cy='96', r='20', class='radar__ring')
        svg.radar__points(version='1.1', width='100%', height='100%')
          each p in POINTS
            g.radar__point(style=`--n: ${p.n}; --y: ${p.y};`)
              circle(r=`${p.r}`, class="radar__circle")